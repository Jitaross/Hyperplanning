<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.atlas.hyperplanning.fxapp2.view.Controller">
    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Tabular View" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox fx:id="dataContainer" />
    </center>
    <bottom>
        <HBox id="HBox" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label prefHeight="17.0" prefWidth="113.0" text="Search Text:" />
            <TextField fx:id="searchField" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="Search" HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>
   <right>
      <ListView fx:id="searchList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
