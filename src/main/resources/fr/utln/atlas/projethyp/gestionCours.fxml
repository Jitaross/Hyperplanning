<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vboxGestionCours" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.utln.atlas.projethyp.controller.GestionCoursController">
    <children>
      <GridPane prefWidth="300.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
              <Label text="Matière : " />
              <ChoiceBox fx:id="choiceBoxMatiere" prefWidth="150.0" GridPane.columnIndex="1" />
              <Label text="Enseignant : " GridPane.rowIndex="1" />
              <ChoiceBox fx:id="choiceBoxEnseignant" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              <Label text="Salle : " GridPane.rowIndex="2" />
               <ChoiceBox fx:id="choiceBoxSalle" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Label text="Date : " GridPane.rowIndex="3" />
               <DatePicker fx:id="datePicker" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <Label text="Heure début : " GridPane.rowIndex="4" />
               <ChoiceBox fx:id="choiceBoxHeureDebut" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
             <Label text="Heure fin : " GridPane.rowIndex="5" />
             <ChoiceBox fx:id="choiceBoxHeureFin" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
             <Label text="Type cours : " GridPane.rowIndex="6" />
             <ChoiceBox fx:id="choiceBoxTypeCours" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Button fx:id="btnAnnuler" mnemonicParsing="false" text="Annuler" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
            <Button fx:id="btnPrevisualisation" mnemonicParsing="false" text="Prévisualisation" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
             <Button fx:id="btnConfirmer" mnemonicParsing="false" text="Confirmer" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>

    </children>
</VBox>
